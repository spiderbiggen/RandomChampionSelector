<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.AppBarOverlay" parent="Widget.MaterialComponents.AppBarLayout.PrimarySurface" />

    <style name="Widget.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary" />


    <style name="Text" parent="AppTheme">
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="Text.Large" parent="android:TextAppearance.Material.Display1" />

    <style name="Text.Subtitle" parent="android:TextAppearance.Material.Widget.ActionBar.Subtitle" />

    <style name="Text.Title" parent="android:TextAppearance.Material.Widget.ActionBar.Title" />

    <style name="Text.Shadowed">
        <item name="android:shadowRadius">8</item>
    </style>

    <style name="Text.Shadowed.Large">
        <item name="android:textAppearance">@style/Text.Large</item>
    </style>

    <style name="Text.Shadowed.Subtitle">
        <item name="android:textAppearance">@style/Text.Subtitle</item>
    </style>

    <style name="Text.Shadowed.Title">
        <item name="android:textAppearance">@style/Text.Title</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:shadowRadius">8</item>
        <item name="android:shadowColor">@android:color/black</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Collapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:shadowRadius">8</item>
        <item name="android:shadowColor">@android:color/black</item>
    </style>

    <style name="Button">
        <item name="colorControlHighlight">@color/primary_dark</item>
        <item name="colorButtonNormal">@color/accent</item>
        <!--        <item name="android:textSize">20sp</item>-->
        <!--        <item name="android:textAllCaps">false</item>-->
        <!--        <item name="android:textStyle">bold</item>-->
    </style>

</resources>